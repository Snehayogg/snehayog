{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "frontend (Flutter debug mode)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "cwd": "${workspaceFolder}",
            "args": [
                "--flavor",
                "development"
            ]
        },
        {
            "name": "frontend (Flutter profile mode)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "cwd": "${workspaceFolder}",
            "flutterMode": "profile",
            "args": [
                "--flavor",
                "development"
            ]
        },
        {
            "name": "frontend (Flutter release mode)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "cwd": "${workspaceFolder}",
            "flutterMode": "release",
            "args": [
                "--flavor",
                "production"
            ]
        },
        {
            "name": "frontend (Flutter web)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "cwd": "${workspaceFolder}",
            "args": [
                "-d",
                "chrome",
                "--web-port",
                "8080"
            ]
        }
    ]
}
